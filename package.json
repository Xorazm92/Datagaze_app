{
  "name": "superapp",
  "version": "0.0.1",
  "description": "<p align=\"center\">   <a href=\"http://nestjs.com/\" target=\"blank\"><img src=\"https://nestjs.com/img/logo-small.svg\" width=\"120\" alt=\"Nest Logo\" /></a> </p>",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migration:create": "knex migrate:make",
    "migration:run": "knex migrate:latest",
    "migration:rollback": "knex migrate:rollback",
    "seed:run": "knex seed:run",
    "knex": "knex --knexfile knexfile.ts -x ts"
  },
  "dependencies": {
    // NestJS asosiy paketlari
    "@nestjs/common": "^10.4.15",      // NestJS frameworkining asosiy komponenti
    "@nestjs/core": "^10.4.15",        // NestJS core funksionalligi
    "@nestjs/config": "^3.3.0",        // Konfiguratsiya uchun (.env fayllarni o'qish)
    "@nestjs/platform-express": "^10.4.15", // Express.js integratsiyasi

    // Ma'lumotlar bazasi bilan ishlash
    "nest-knexjs": "^0.0.26",          // Knex.js ORM integratsiyasi
    "pg": "^8.14.1",                   // PostgreSQL drayveri

    // Xavfsizlik
    "@nestjs/jwt": "^10.2.0",          // JWT bilan ishlash
    "@nestjs/passport": "^11.0.5",      // Autentifikatsiya
    "passport": "^0.7.0",               // Passport.js asosiy kutubxonasi
    "passport-jwt": "^4.0.1",           // JWT strategiyasi
    "bcrypt": "^5.1.1",                // Parollarni hashlash

    // Validatsiya va transformatsiya
    "class-validator": "^0.14.1",       // DTO validatsiyasi
    "class-transformer": "^0.5.1",      // Obyektlarni transformatsiya qilish

    // Real-time kommunikatsiya
    "@nestjs/websockets": "^10.4.15",   // WebSocket qo'llab-quvvatlash
    "@nestjs/platform-socket.io": "^10.4.15", // Socket.io integratsiyasi
    "socket.io": "^4.8.1",              // Socket.io kutubxonasi

    // API dokumentatsiyasi
    "@nestjs/swagger": "^7.4.2",        // Swagger/OpenAPI integratsiyasi

    // Xavfsizlik va monitoring
    "helmet": "^8.0.0",                 // HTTP headerlarni xavfsizlashtirish
    "express-rate-limit": "^7.5.0",     // So'rovlar sonini cheklash

    // Logging va monitoring
    "winston": "^3.17.0",               // Logging tizimi
    "winston-daily-rotate-file": "^5.0.0", // Log fayllarni rotatsiya qilish

    // Fayl yuklash
    "multer": "^1.4.5-lts.1",           // Fayllarni yuklash uchun

    // Utility paketlar
    "dotenv": "^16.4.7",                // Environment o'zgaruvchilarni o'qish
    "rxjs": "^7.8.1",                   // Reaktiv dasturlash
    "reflect-metadata": "^0.2.0"        // Metadata reflection API
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cls-hooked": "^4.3.9",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.19",
    "@types/otp-generator": "^4.0.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "knex": "^3.1.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "main": ".eslintrc.js",
  "keywords": []
}
